.wrapper_single_index
  .Single
    .Single_header
      %h1.Single_header_icon
        =link_to image_tag("logo.png",alt:"flema",class:"icon_imgHead"),"/"
      %nav.Single_header_singup_bar
        %ol.clearfix
          %li.active
            会員情報
          .progress_statrs
    .Single_main
      %section.Single_main_container
        %h2.Single_main_container_head
          ユーザー情報入力
        .Single_main_container_warrap
          .Single_main_container_warrap_content
            = form_for(@user, url: user_registration_path, html: { class: "Single_main_container_warrap_content_group"}) do |f|
              .Form_info
                = f.label :nickname, class: "Form_info_name"
                %span.Form_info_require
                  必須
              = f.text_field :nickname,  class: "Form_info_index", placeholder: "例）フリマ太朗"
              %ul.has_error_test
                %li.has_error
                  = @user.errors.full_messages_for(:nickname).first
              .Form_info
                = f.label :email, class: "Form_info_name"
                %span.Form_info_require
                  必須
              = f.email_field :email, { class: "Form_info_index", placeholder: "PC・携帯とちらでも可", autocomplete: "email"}
              %ul.has_error_test
                %li.has_error_mail
                  = @user.errors.full_messages_for(:email).first
              .Form_info
                = f.label :password, class: "Form_info_name"
                %span.Form_info_require
                  必須
              = f.password_field :password, class: "Form_info_index", placeholder: "7文字以上の半角数字"
              %ul.has_error_test
                %li.has_error_password
                  = @user.errors.full_messages_for(:password).first
              .Form_info
                = f.label :password_confirmation, class: "Form_info_name"
                %span.Form_info_require
                  必須
              = f.password_field :password_confirmation, class: "Form_info_index", placeholder: "再確認用"
              %ul.has_error_test
                %li.has_error_password
                  = @user.errors.full_messages_for(:password_confirmation).first
              .Form_info
                %label.Form_info_name
                  お名前(全角)
                %span.Form_info_require
                  必須
              = f.text_field :family_name, class: "Form_info_index-two", placeholder: "例）鈴木"
              = f.text_field :first_name, class: "Form_info_index-two", placeholder: "例）太朗"
              %ul.has_error_test
                %li.has_error
                  = @user.errors.full_messages_for(:family_name).first
                %li.has_error
                  = @user.errors.full_messages_for(:first_name).first
              .Form_info
                %label.Form_info_name
                  ふりがな(全角)
                %span.Form_info_require
                  必須
              = f.text_field :hurigana_family, class: "Form_info_index-two", placeholder: "例）すずき"
              = f.text_field :hurigana_first, class: "Form_info_index-two", placeholder: "例）たろう"
              %ul.has_error_test
                %li.has_error
                  = @user.errors.full_messages_for(:hurigana_family).first
                %li.has_error
                  = @user.errors.full_messages_for(:hurigana_first).first
              .Form_info
                = f.label :birthday, class: "Form_info_name"
                %span.Form_info_require
                  必須
                = f.date_select :birthday
              %ul.has_error_test
                %li.has_error
                  = @user.errors.full_messages_for(:birthday).first
              %p.Form_info_times
                ※本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
              .Single_main_container_warrap_content_group
                = f.submit "次へ", class: "Single_main_container_warrap_content_group_submit-btn"
    